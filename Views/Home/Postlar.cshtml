@{
}
@model IEnumerable<BrsBlogWeb.Models.BlogPost>
<h1>POSTLAR</h1>
<hr />

@{
    foreach (var post in Model)
    {
        <div class="post-body">
            <a href="/PostPage/@post.post_url" class="PostUrl">
                <img class="postImg" src="~/images/@post.post_img" />
                <h1 class="PostHeader">@post.post_header</h1>
                
            </a>
        </div>
    }
}

