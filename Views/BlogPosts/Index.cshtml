@model IEnumerable<BrsBlogWeb.Models.BlogPost>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.post_img)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.post_header)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.post_description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.post_keyword)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.post_url)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.post_img)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.post_header)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.post_description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.post_keyword)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.post_url)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
